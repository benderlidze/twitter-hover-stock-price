{
    "name": "Charts for twitter",
    "version": "1.11",
    "description": "Candle charts for twitter",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "scripting"
    ],
     "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                 "https://query1.finance.yahoo.com/*",
                 "https://*.yahoo.com/*"
                 
            ],
            "css": [
                "imageMarker.css"
            ],
            "js": [
                "imageMarker.js",
                "tv.js"
            ]
        }
    ],

    "background": {
    "service_worker": "bg.js"
  },
   "manifest_version": 3
  
}